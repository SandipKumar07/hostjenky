pipeline {
    agent any

    stages {
        stage('Deploying Web Server') {
            steps {
                script {
                    // Define the deployment directory
                    def deploymentDir = '/var/www/html'

                    // Create the deployment directory if it doesn't exist
                    sh "mkdir -p ${deploymentDir}"

                    // Copying files to the deployment directory
                    sh "cp -r * ${deploymentDir}"

                    // Additional deployment steps can be added here if needed
                    // e.g., restart the web server or perform other tasks
                    // sh 'systemctl restart your-web-server'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful'
        }
        failure {
            echo 'Deployment failed'
        }
    }
}
